{% extends '@App/Security/layout.html.twig' %}
{% set page_title = 'Login' %}

{% block content %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-group">
          <div class="card p-4">
            <div class="card-body">
              <h1>Login</h1>
              <p class="text-muted">Sign In to your account</p>
              <form method="post" action="#" id="needs-validation" novalidate>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="icon-user"></i>
                </span>
                  </div>
                  <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="icon-lock"></i>
                </span>
                  </div>
                  <input class="form-control" type="password" id="password" name="password" placeholder="Password">
                </div>
                <div class="row">
                  <div class="col-6">
                    <button class="btn btn-primary px-4" type="submit">Login</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
              <div>
                <h2>Sign up</h2>
                <p>The app for syncing your salesforce and quickbooks account. Click register to create an account.</p>
                <a class="btn btn-primary active mt-3" href="{{ path('user_register') }}">Register Now!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  {% for message in app.flashes('account_create_success') %}
    <script>
      Swal.fire({
        text: '{{ message }}',
        timer: 2000,
        type: 'success'
      });
    </script>
  {% endfor %}
{% endblock %}
